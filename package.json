{
  "name": "backend-boilerplate",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && tsc -b",
    "start": "node src",
    "local": "ts-node src",
    "local:watch": "nodemon src -e ts,json --exec 'npm run local'",
    "test": "echo \"No tests specified\""
  },
  "keywords": [],
  "author": "Rishabh Bhardwaj",
  "license": "ISC",
  "description": "This is a node, express, typeorm and typescript.",
  "devDependencies": {
    "@types/node": "^20.14.9",
    "eslint": "^9.5.0",
    "globals": "^15.6.0",
    "nodemon": "^3.1.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2"
  },
  "dependencies": {
    "express": "^4.19.2",
    "husky": "^9.0.11",
    "prettier": "^3.3.2",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "husky": {
    "hooks": {
    "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
    "eslint — fix",
    "prettier — write",
    "git add"
  ]
  }
}
