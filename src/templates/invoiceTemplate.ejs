<!DOCTYPE html>
<html lang="en">
<head>
    <title>Invoice Details</title>
    <style>
        body { font-family: Arial, sans-serif; }
        .container { width: 80%; margin: 0 auto; }
        h1 { text-align: center; }
        .details { margin-bottom: 20px; }
        .details h2 { margin-bottom: 10px; }
        .details p { margin: 0; }
        .section { margin-bottom: 40px; }

        .border { border: 0.5px solid gray; border-radius: 10px; overflow: hidden; }
        .header { background-color: #4036F4; border-top-left-radius: 10px; border-top-right-radius: 10px; padding: 20px 10px 10px 10px; display: flex; justify-content: space-between; color: white; font-size: 1.8rem; font-weight: 700; }
        .header div { display: flex; gap: 2rem; align-items: center; }
        .table { width: 100%; padding: 10px 3px; font-weight: 700; color: gray; display: flex; justify-content: space-between; }
        .table div { flex: 1; }
        .table .description { flex: 3; }
        .item-row { display: flex; justify-content: space-between; padding: 10px 3px; }
        .item-row div { flex: 1; }
        .item-row .description { flex: 3; }
        .item-row:nth-child(even) { background-color: #f9f9f9; }
    </style>
</head>
<body>
    <div class="container">
        <h1>Invoice Details</h1>
        <div class="details">
            <h2>Project Details</h2>
            <table>
                <tr>
                    <th>Project Name</th>
                    <td><%= checkoutDetails.projectName %></td>
                </tr>
                <tr>
                    <th>Project URL</th>
                    <td><%= checkoutDetails.projectURL %></td>
                </tr>
                <tr>
                    <th>First Name</th>
                    <td><%= checkoutDetails.firstName %></td>
                </tr>
                <tr>
                    <th>Last Name</th>
                    <td><%= checkoutDetails.lastName %></td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td><%= checkoutDetails.email %></td>
                </tr>
                <tr>
                    <th>Link</th>
                    <td><%= checkoutDetails.link %></td>
                </tr>
            </table>
        </div>

        <!-- Influencers Section -->
        <div class="py-16">
            <div class="w-full h-fit border border-gray-500 rounded-xl overflow-hidden">
                <div class="w-full h-fit bg-[#4036F4] rounded-t-xl">
                    <div class="header">
                        <div>Influencers List</div>
                        <div>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 font-[700]">
                                <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5"/>
                            </svg>
                            <div>SUBTOTAL</div>
                        </div>
                    </div>
                </div>
                <!-- Influencer Table Change -->
                <div id="Div15000" class="flex flex-col justify-between w-full">
                    <!-- heading -->
                    <div class="table">
                        <div class="description">Description</div>
                        <div>Item</div>
                        <div>Price</div>
                    </div>
                    <% influencerPRs.forEach(influencer => { %>
                    <div class="item-row">
                        <div class="description">
                            <p><strong><%= influencer.name %></strong></p>
                            <p><%= influencer.category_name %> <%= influencer.location %> | <%= influencer.subscribers %> Subscribers | <%= influencer.content_type %></p>
                            
                        </div>
                        <div>Influencer</div>
                        <div>$<%= influencer.price %></div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>

        <!-- Packages Section -->
        <div class="py-16">
            <div class="w-full h-fit border border-gray-500 rounded-xl">
                <div class="w-full h-fit bg-[#4036F4] rounded-t-xl">
                    <div class="header">
                        <div>PR Packages</div>
                        <div>
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 font-[700]">
                                <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5"/>
                            </svg>
                            <div>SUBTOTAL</div>
                        </div>
                    </div>
                </div>
                <!-- Packages heading -->
                <div id="Div8000" class="flex flex-col justify-between w-full overflow-hidden">
                    <div class="table">
                        <div class="description">Description</div>
                        <div>Price</div>
                    </div>
                    <% packageHeaders.forEach(packageHeader => { %>
                    <div class="item-row">
                        <div class="description">
                            <h3><%= packageHeader.header %></h3>
                            <% packageHeader.packages.forEach(pkg => { %>
                            <p><strong>Media:</strong> <%= pkg.media %></p>
                            <p><strong>Link:</strong> <a href="<%= pkg.link %>"><%= pkg.link %></a></p>
                            <p><strong>Format:</strong> <%= pkg.format %></p>
                            <p><strong>Monthly Traffic:</strong> <%= pkg.monthlyTraffic %></p>
                            <p><strong>Turnaround Time:</strong> <%= pkg.turnaroundTime %></p>
                            <% }) %>
                        </div>
                        <div>$<%= packageHeader.cost %></div>
                    </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
